---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import Card from "../components/Card.astro";
---

<BaseLayout title = "Projects" sideBarActiveItemID="projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Backend Projects</div>
  </div>

  <HorizontalCard
    title="SQLite Clone"
    img="rsqlite.svg"
    desc="a simple SQLite clone implemented in rust"
    url="https://github.com/noot-noot-pengu/RSQLite"
    badge="Terminal App"
    tags={["Rust"]}
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Torrent Client"
    img="/torrent.svg"
    desc="A torrent client implemented in Rust"
    url="https://github.com/noot-noot-pengu/torrent"
    badge="Terminal App"
    tags={["Rust"]}
  />

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Web Projects</div>
  </div>

  <HorizontalCard
    title="Slack Clone"
    img="/slack.png"
    desc="slack clone with react and nodejs"
    url="https://github.com/noot-noot-pengu/slack_clone"
    badge="Full-stack"
    tags={["NodeJs", "React"]}
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Classic Games"
    img="/classic.png"
    desc="nostalgic early 2000s computer games with svelte"
    url="https://github.com/noot-noot-pengu/classic_games"
    badge="Full-stack"
    tags={["Svelte", "Tailwind"]}
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="ClickUp clone"
    img="/clickup.png"
    desc="ClickUp clone with pure javascript and nodejs"
    url="https://github.com/noot-noot-pengu/clickup_clone"
    badge="Full-stack"
    tags={["JavaScript", "NodeJs"]}
  />

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Mobile Projects</div>
  </div>  

  <HorizontalCard
    title="Messenger App"
    img="/flutter_app.svg"
    desc="Frontend for a flutter messaging app"
    url="https://github.com/noot-noot-pengu/flutter_chat_application"
    badge="Frontend"
    tags={["Flutter"]}
  />


